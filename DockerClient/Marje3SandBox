FROM ubuntu AS base
ARG DEBIAN_FRONTEND=noninteractive
ENV TZ=Asia/Amman
ENV DOTNET_CLI_TELEMETRY_OPTOUT=1
RUN apt-get update && \
    apt-get install -y \
    #build-essential \
    python3 \
    python3-pip \
    tzdata \
    wget \ 
    apt-transport-https \
    lsb-release \
    fontconfig \
    libgcc1 \
    libgssapi-krb5-2 \
    libicu66 \
    libssl1.1 \
    libstdc++6 \
    gnupg \
    zlib1g && \
    rm -rf /var/lib/apt/lists/*


COPY DockerClient.py .
ENTRYPOINT [ "python3", "DockerClient.py" ]